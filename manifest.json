{
  "manifest_version": 3,
  "name": "ResponsiveDeck",
  "version": "1.0.0",
  "description": "Preview any URL across multiple device viewports simultaneously.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open ResponsiveDeck",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}